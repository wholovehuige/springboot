<?xml version="1.0" encoding="UTF-8" ?>

<configuration debug="false">
    <!-- 控制台 -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger - %msg%n</pattern>
        </encoder>
    </appender>
    <!-- 集成测试日志 -->
    <appender name="TEST" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- 按天回滚 daily -->
            <fileNamePattern>./logs/%d{yyyy-MM-dd}/test.log</fileNamePattern>
            <!-- 日志最大的历史 60天 -->
            <maxHistory>60</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger - %msg%n</pattern>
        </encoder>
    </appender>
    <!-- 出错日志 appender  -->
    <appender name="ERROR" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- 按天回滚 daily -->
            <fileNamePattern>./logs/%d{yyyy-MM-dd}/error.log</fileNamePattern>
            <!-- 日志最大的历史 60天 -->
            <maxHistory>60</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger - %msg%n</pattern>
        </encoder>
    </appender>
    <!-- 访问日志 appender  -->
    <appender name="ACCESS" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- 按天回滚 daily -->
            <fileNamePattern>./logs/%d{yyyy-MM-dd}/access.log</fileNamePattern>
            <!-- 日志最大的历史 60天 -->
            <maxHistory>60</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 访问日志 appender  -->
    <appender name="SYS-USER" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- 按天回滚 daily -->
            <fileNamePattern>./logs/%d{yyyy-MM-dd}/sys-user.log</fileNamePattern>
            <!-- 日志最大的历史 60天 -->
            <maxHistory>60</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger - %msg%n</pattern>
        </encoder>
    </appender>
    <!-- 网页日志 -->
    <appender name="WEB" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- 按天回滚 daily -->
            <fileNamePattern>./logs/%d{yyyy-MM-dd}/web.log</fileNamePattern>
            <!-- 日志最大的历史 60天 -->
            <maxHistory>60</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="debug"/>

    <!--控制台输出-->
    <logger name="com.ylz.cloudhos" level="debug">
    <appender-ref ref="STDOUT"/>
    </logger>

    <logger name="org.apache" level="info">
        <appender-ref ref="STDOUT"/>
    </logger>

    <logger name="java.sql.Connection" level="info">
        <appender-ref ref="STDOUT"/>
    </logger>
    <logger name="java.sql.Statement" level="info">
        <appender-ref ref="STDOUT"/>
    </logger>
    <logger name="org.springframework" level="info">
        <appender-ref ref="STDOUT"/>
    </logger>
    <!--测试环境日志-->
    <logger name="com.ylz.cloudhos" level="debug">
    <appender-ref ref="TEST"/>
    </logger>

    <logger name="org.apache" level="info">
    <appender-ref ref="TEST"/>
    </logger>

    <logger name="java.sql.Connection" level="info">
    <appender-ref ref="TEST"/>
    </logger>
    <logger name="java.sql.Statement" level="info">
    <appender-ref ref="TEST"/>
    </logger>
    <logger name="org.springframework" level="info">
    <appender-ref ref="TEST"/>
    </logger>

    <!--错误日志-->
    <logger name="yyy-error" level="info">
        <appender-ref ref="ERROR"/>
    </logger>
    <!--访问日志-->
    <logger name="yyy-access" level="info">
        <appender-ref ref="ACCESS"/>
    </logger>
    <!--系统用户操作日志-->
    <logger name="yyy-sys-user" level="info">
        <appender-ref ref="SYS-USER"/>
    </logger>
    <!-- 网页日志 -->
    <logger name="web" level="info">
        <appender-ref ref="WEB"/>
    </logger>
</configuration>